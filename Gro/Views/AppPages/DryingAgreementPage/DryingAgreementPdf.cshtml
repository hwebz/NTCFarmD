@model Gro.ViewModels.Pages.AppPages.DryingAgreement.DryingAgreementViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>@Model.CurrentPage.Heading</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css" />
    <!-- News detail stylesheet -->
    <style type="text/css">
        html {
            box-sizing: border-box;
            background-color: #fff;
            font-size: 16px;
            font-size: 1rem;
            line-height: 1.5;
            max-width: 100%;
            min-height: 100%;
            overflow-x: hidden;
            overflow-y: scroll;
            font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif;
            color: #4a4a4a;
            -ms-text-size-adjust: 100%;
            -webkit-text-size-adjust: 100%;
            -moz-osx-font-smoothing: grayscale;
            -webkit-font-smoothing: antialiased;
        }

        body {
            color: #444;
            font-family: akzidenzreg,Arial,Helvetica,sans-serif;
            font-size: 16px;
            line-height: 24px;
        }

        img {
            border-style: none;
            max-width: 100%;
            font-style: italic;
            vertical-align: middle;
        }

        .lm__block {
            background: #fff;
            font-family: akzidenzreg,Arial,Helvetica,sans-serif;
            font-size: 14px;
            line-height: 22px;
        }

        .pdf__logo {
            padding-top: 5em;
        }

            .pdf__logo .lm__logo-item {
                padding-left: 100px;
            }

        .heading-title {
            font-family: clarendonurwreg,Arial,Helvetica,sans-serif !important;
            font-size: 28px !important;
            line-height: 36px;
        }

        .pdf__logo .file-title {
            text-align: center;
        }

        .printing-form__layout {
            padding: 10px 100px 100px;
        }

        .layout {
            margin: 0;
            padding: 0;
            margin-left: -.625rem;
            font-size: 0;
            list-style: none;
        }

        .layout--large {
            margin-left: -1.25rem;
        }

        .layout__item {
            font-size: 16px;
            font-size: 1rem;
            display: inline-block;
            width: 100%;
            padding-left: .625rem;
            vertical-align: top;
            position: relative;
        }

        .lm__row-margin {
            margin-top: 15px;
        }

        .layout--large > .layout__item {
            padding-left: 1.25rem;
        }

        .lm__control-label {
            padding-right: 10px;
            font-weight: 700;
        }
    </style>
</head>

<body>
    <header class="lm__header"></header>
    <section>
        <div class="lm__block">
            <div class="lm__add-user__wrapper">
                <div class="pdf__logo">
                    <a href="#"><img src="/Static/images/logo.png" alt="LM2 Logo" class="lm__logo-item"></a>
                    <h2 class="heading-title file-title">Avtalsbekräftelse</h2>
                </div>
                <div class="printing-form__layout">
                    <div class="layout  layout--large">
                        <div class="layout__item u-1/1 lm__row-margin">
                            <span class="lm__control-label">Avtalstyp:</span><span>@Model.Agreement.Description</span>
                        </div>
                        <div class="layout__item u-1/1 lm__row-margin">
                            <span class="lm__control-label">Skördeår: </span><span>@Model.Agreement.HarvestYear</span>
                        </div>
                        <div class="layout__item u-1/1 lm__row-margin">
                            <span class="lm__control-label">Avgift: </span><span>@Model.Agreement.Price</span>
                        </div>
                        <div class="layout__item u-1/1 lm__row-margin">
                            <span class="lm__control-label">Max vh:</span><span>@Model.Agreement.MaxMoisture</span>
                        </div>
                    </div>
                    <div class="layout  layout--large lm__row-margin">
                        <div class="layout__item u-1/1 lm__row-margin">
                            <span class="lm__control-label">Leverantör: </span><span>@Model.Customer.CustomerName</span>
                        </div>
                        <div class="layout__item u-1/1 lm__row-margin">
                            <span class="lm__control-label">Leverantörsnr: </span><span>@Model.Customer.CustomerId</span>
                        </div>
                        <div class="layout__item u-1/1 lm__row-margin">
                            <span class="lm__control-label">Mobilnr: </span><span>@Model.Customer.PhoneNumber</span>
                        </div>
                        <div class="layout__item u-1/1 lm__row-margin">
                            <span class="lm__control-label">E-post: </span><span>@Model.Customer.Email</span>
                        </div>
                        <div class="layout__item u-1/1 lm__row-margin">
                            <span class="lm__control-label">Avtalsdatum: </span><span>@string.Format("{0:yyyy-MM-dd}", DateTime.Now)</span>
                        </div>
                        <div class="clearfix"></div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
