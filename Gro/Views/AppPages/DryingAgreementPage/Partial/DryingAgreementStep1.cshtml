@model Gro.ViewModels.Pages.AppPages.DryingAgreement.DryingAgreementViewModel

<div class="lm__breadcrums">
    <div class="lm__step-inform">
        <h2 class="heading-title">Steg 1</h2>
        <h3 class="heading-title-2">Teckna torkavtal</h3>
    </div>
    <ul class="lm__form-progress">
        <span class="lm__form-progress__line"></span>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
    </ul>
</div>
<form action="#" method="post" class="lm__add-user-form author-inform-form">
    <div class="author-inform-form__input">
        <h1 class="heading-title">@Model.Agreement.HeaderText</h1>
        <div class="layout  layout--large">
            <div class="layout__item u-1/1">
                <p>
                    @Model.Agreement.PriceTerms
                </p>
                <p>
                    @Model.Agreement.OtherTerms
                </p>
                <p>
                    @Model.Agreement.QuantityTerms
                </p>
                <p>
                    @Model.Agreement.TermsAttachments
                </p>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="lm__block lm__mina-avtal layout__item has-separator">
        <div class="lm__checkbox lm__tick">
            <input type="checkbox" id="approveDryingAgreementTerm"/>
            <label></label>
        </div>
        <span class="middle-vertical" data-id="4229496" href="#">Jag godkänner ovanstående villkor och Lantmännens allmänna inköpsvillkor för spannmål. </span>
    </div>

    <div class="author-inform-form__input align-right-text">
        <div class="layout">
            <div class="layout__item u-1/1 u-1/1-tablet u-1/3-desktop">
                <input type="button" id="dryingBtnMoveToStep2" class="lm__form-btn width-100 disabled" value="Teckna torkavtal" />
            </div>
        </div>
    </div>
</form>