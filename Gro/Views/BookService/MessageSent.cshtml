@{
    var backLinkText = string.Empty;
    if ("machine".Equals(ViewData["reference"]))
    {
        backLinkText = "Tillbaka till maskin";
    }
    else if ("facility".Equals(ViewData["reference"]))
    {
        backLinkText = "Tillbaka till anläggning";
    }
}

<section class="lm__contents">
    <div class="wrapper">
        <div class="layout  layout--large">
            <div class="layout__item u-1/1">
                <a target="_self" href="@ViewData["backLinkReference"]" class="lm__back-link small-distance-bottom">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>@backLinkText
                </a>
            </div>
            <div class="layout__item u-1/1 u-2/3-tablet">
                <div class="lm__block">
                    <div class="lm__block-box">
                        <h1 class="lm__page-title">Din bokningsförfrågan är skickad</h1>
                        <p class="lm__bold-title">Verkstaden kommer kontakta dig med förslag på tid.</p>
                    </div>
                </div>
            </div>
            <div class="layout__item u-1/1 u-1/3-tablet">

            </div>
        </div>
    </div>
</section>
