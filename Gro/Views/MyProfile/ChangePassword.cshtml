@using Gro.Core.ContentTypes.Utils
@model Gro.ViewModels.PageViewModel<Gro.Core.ContentTypes.Pages.MyProfile.ChangePasswordPage>

<section class="lm__contents">
    <div class="wrapper">
        <div class="layout  layout--large">
            <div class="layout__item u-1/1">
                <a href="@ContentExtensions.GetPageUnderSettingUrl(x => x.MyAccountLink)" class="lm__back-link small-distance-bottom">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    Till Mitt konto
                </a>
            </div>
            <div class="layout__item u-1/1 u-2/3-tablet">
                <div class="lm__block redigera-block">
                    <div class="lm__block-box no-padding-bottom">
                        <h1 class="lm__page-title">@Html.PropertyFor(x => x.CurrentPage.Heading)</h1>
                    </div>
                    <div class="lm__add-user__wrapper">
                        @using (Html.BeginForm("ChangePassword", "ChangePassword", FormMethod.Post, new { name = "changePassword", @class = "lm__add-user-form author-inform-form", onsubmit = "return ChangePasswordPage.validateForm()", enctype = "multipart/form-data" }))
                        {
                            <div class="author-inform-form__input">
                                <div class="width-40">
                                    <div class="author-inform-form__column author-inform-form__column-full">
                                        <label for="oldPassword">Nuvarande lösenord*</label>
                                        <input type="password" id="oldPassword" name="oldPassword" autocomplete="new-password" class="fullwidth-input">
                                        <span class="error-item">@ViewData["incorrectPasswordMessage"]</span>
                                    </div>
                                    <div class="author-inform-form__column author-inform-form__column-full">
                                        <label for="newPassword">Nytt lösenord*</label>
                                        <input type="password" id="newPassword" name="newPassword" autocomplete="new-password" class="fullwidth-input">
                                        <span class="error-item">@ViewData["message"]</span>
                                    </div>
                                    <div class="author-inform-form__column author-inform-form__column-full">
                                        <label for="retypeNewPassword">Upprepa nytt lösenord*</label>
                                        <input type="password" id="retypeNewPassword" name="retypeNewPassword" autocomplete="new-password" class="fullwidth-input">
                                        <span class="error-item" s>@ViewData["message"]</span>
                                    </div>
                                </div>
                            </div>
                            <div class="author-inform-form__input block-button-on-mobile align-right-text mobile two-buttons">
                                <a target="_self" class="lm__form-btn left-button" href="@ContentExtensions.GetPageUnderSettingUrl(x => x.MyAccountLink)">Avbryt</a>
                                <input type="submit" class="lm__form-btn reverse-state" value="Uppdatera">
                            </div>
                            <div class="author-inform-form__input">
                                <div class="lm__gray-box">
                                    <p class="lm__bold-title">Krav för nytt lösenord</p>
                                    <p>Du måste ha haft fem unika lösenord innan du kan använda ett gammalt lösenord igen.</p>
                                    <p>Lösenordet måste innehålla minst 8 tecken</p>
                                    <p>Varav minst tre av följande teckentyper</p>
                                    <ul>
                                        <li>- Minst två siffror</li>
                                        <li>- Stora bokstäver</li>
                                        <li>- Små bokstäver</li>
                                        <li>- Skiljetecken</li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="layout__item u-1/1 u-1/3-tablet">
                @if (Model.CurrentPage.GetLevel() >= 3)
                {
                    Html.RenderAction("GetRightNav", "Navigation", new { page = Model.CurrentPage });
                }
            </div>
        </div>
    </div>
</section>
