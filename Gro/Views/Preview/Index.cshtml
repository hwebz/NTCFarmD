@model Gro.ViewModels.PreviewModel

@foreach (var area in Model.Areas)
{
    <div class="row preview clearfix" style="text-align: center;">
        <h3>@*Preview of block*@</h3>
        <h2 class="alert alert-info">@area.AreaName</h2>
    </div>
    <div class="row preview clearfix @area.CssClass">
        @Html.DisplayFor(x => area.ContentArea, new { Tag = area.AreaTag })
    </div>
}
