@using Gro.ViewModels;
@using Gro.Core.ContentTypes.Pages.Registration;
@model PageViewModel<RegisterAccountPage>

<section class="lm__contents">
    <div class="wrapper">
        <div class="layout  layout--large">
            <div class="layout__item u-1/1">
                <a href="#" class="lm__back-link small-distance-bottom"><i class="fa fa-arrow-left" aria-hidden="true"></i>Tillbaka Logga in</a>
                <h1 class="lm__page-title">Registrera konto hos Lantmännen och LM<sup>2</sup></h1>
            </div>
            <div class="layout__item u-1/1 u-2/3-tablet">
                <div class="lm__block">
                    <form class="author-inform-form style-2" action="" method="post">
                        <div class="lm__block-box has-separator">

                            <h2 class="heading-title-2">Registrera konto</h2>
                            <div class="author-inform-form__input">
                                <div class="author-inform-form__column author-inform-form__column-custom-4 no-padding">
                                    <label for="idNumber">Ange organisationsnr/personnr</label>
                                    <input type="text" name="idNumber" id="idNumber" class="organisation @(ViewData["error"] != null ? "error" : string.Empty)"/>

                                    @if (ViewData["error"] != null)
                                    {
                                        <span class="error-item">@ViewData["error"] </span>
                                    }

                                </div>
                            </div>
                        </div>
                        <div class="lm__block-box has-separator">
                            <div class="address-block gray-background register-guide">
                                <h2 class="heading-title-2">LM<sup>2</sup>-konto för företag som inte är enskild firma?</h2>
                                <p class="lm__bold-title">Du måste bifoga en blankett för ansökan om avtal för e-tjänster när du registrerar ett konto. Detta gäller både nya och befintliga Lantmännenkunder.</p>
                                <ol class="color-numeric-list">
                                    <li>Fyll i blanketten</li>
                                    <li>Skriv ut blanketten</li>
                                    <li>Signera blanketten</li>
                                    <li>Skanna in eller fota blanketten</li>
                                    <li>Bifoga blanketten under registreringsprocessen</li>
                                </ol>
                                <p class="lm__bold-title">För avtal om e-tjänster krävs också</p>
                                <ul>
                                    <li>Kopia på ID-handlingar för firmatecknare</li>
                                    <li>Registreingsbevis</li>
                                </ul>
                                <a href="#" class="lm__form-btn register-acc-btn responsive">Registrera nytt konto blankett <i class="fa fa-file-pdf-o"></i></a>
                            </div>
                        </div>
                        <div class="lm__block-box align-right-text">
                            <div class="author-inform-form__input block-button-on-mobile">
                                <input type="button" onclick="window.history.back();" class="lm__form-btn left-button" value="Avbryt" />
                                <input type="submit" class="lm__form-btn reverse-state" value="Fortsätt" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="layout__item u-1/1 u-1/3-tablet">
                @Html.PropertyFor(x => x.CurrentPage.RightContent)
            </div>
        </div>
    </div>
</section>
