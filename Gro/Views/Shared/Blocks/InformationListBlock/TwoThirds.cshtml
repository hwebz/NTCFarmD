@model Gro.ViewModels.Blocks.InformationListBlockViewModel
@using Gro.Helpers;
<div class="lm__block vaxtline-block">
    <div class="lm__block-header">
        <h1>@Model.CurrentBlock.Headline</h1>
    </div>
    <section class="lm__news article-listing">
        <div class="layout layout--large">
            @foreach (var infoPage in Model.RecentInformationPages)
            {
                <div class="layout__item u-1/1">
                    <article class="lm__news-item">
                        <div class="article-datetime-block">
                            <a href="@Url.PageUrl(infoPage.LinkURL)">
                                <h3 class="article-datetime__day">@infoPage.StartPublish.Day</h3>
                                <p class="article-datetime__month">@infoPage.StartPublish.SwedishMonthString()</p>
                            </a>
                        </div>
                        <div class="article-content">
                            <a href="@Url.PageUrl(infoPage.LinkURL)">
                                <p class="article-datetime">@infoPage.StartPublish.ToStandardDateTimeString()</p>
                                <h4 class="article-title">@infoPage.Heading</h4>
                                <p class="article-summary-description">
                                    @infoPage.Preamble
                                </p>
                            </a>
                        </div>
                    </article>
                </div>
            }
        </div>
    </section>
    <a href="@Url.ContentUrl(Model.CurrentBlock.ArchivePage)" class="lm__more-link align-right-text">@Model.CurrentBlock.ArchiveLinkText <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
</div>
