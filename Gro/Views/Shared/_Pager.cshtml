@model Gro.Business.Paging.Pager

<!-- pager -->
@if (Model.EndPage > 1)
{
    <ul>
        @if (Model.CurrentPage > 1)
        {
            @*<li>
                <a href="@string.Format("~{0}", Model.PageUrl)">First</a>
            </li>*@
            <li>
                <a href="@string.Format("~{0}?page={1}", Model.PageUrl,Model.CurrentPage -1)"><i class="fa fa-arrow-left"></i></a>
            </li>
        }

        @for (var page = Model.StartPage; page <= Model.EndPage; page++)
        {
            <li class="@(page == Model.CurrentPage ? "active" : "")">
                <a href="@string.Format("~{0}?page={1}", Model.PageUrl,page)">@page</a>
            </li>    
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a href="@string.Format("~{0}?page={1}", Model.PageUrl,Model.CurrentPage  + 1)"><i class="fa fa-arrow-right"></i></a>
            </li>
            @*<li>
                <a href="@string.Format("~{0}", Model.TotalPages)">Last</a>
            </li>*@
        }
    </ul>
}				